{
  "name": "poutineer-origin",
  "description": "The central HATEOS HTTP API for the Poutineer application",
  "scripts": {
    "postdeploy": "bin/rake db:create"
  },
  "env": {
    "ORIGIN_ENCRYPTION_PRIVATE": {
      "generator": "secret"
    },
    "ORIGIN_ENCRYPTION_SALT": {
      "generator": "secret"
    },
    "ORIGIN_LOCATION": {
      "required": true
    },
    "RAILS_MASTER_KEY": {
      "generator": "secret"
    },
    "RAILS_MAX_THREADS": {
      "required": true
    },
    "RAILS_SESSION_PRIVATE": {
      "generator": "secret"
    },
    "SECRET_KEY_BASE": {
      "generator": "secret"
    },
    "WEB_CONCURRENCY": {
      "required": true
    },
    "WWW_LOCATION": {
      "required": true
    }
  },
  "formation": {
  },
  "addons": [
    "librato",
    "logdna",
    "newrelic",
    "heroku-postgresql",
    "heroku-redis"
  ],
  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-pgbouncer"
    },
    {
      "url": "heroku/ruby"
    }
  ]
}
